@model List<FinnHubTest.Models.Stock>

<h2>Favorites</h2>

<form asp-controller="Favorites" asp-action="Add" method="post">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Stock symbol" name="symbol">
        <button type="submit" class="btn btn-primary">Add Favorite</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Symbol</th>
            <th>Price</th>
            <th>Percent Change</th>
            <th></th> <!-- For Remove Button -->
        </tr>
    </thead>
    <tbody>
    @foreach (var stock in Model)
    {
        <tr>
            <td>@stock.Symbol</td>
            <td>@stock.Price.ToString("0.00")</td>
            <td>@stock.PercentChange.ToString("0.00")%</td>
            <td>
                <form asp-controller="Favorites" asp-action="Remove" method="post">
                    <input type="hidden" name="symbol" value="@stock.Symbol" />
                    <button type="submit" class="btn btn-danger">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
